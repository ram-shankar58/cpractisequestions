#include <stdio.h>
int maximum(int arr[]){ //finding the maximum score in each game
    int max1=arr[0];
    for (int i=0;i<10;i++){
        if (arr[i]>max1){
            max1=arr[i];


        }

    }
    return max1;
}
int gamestar(int arr[]){
    int x=maximum(arr[]); //getting the maximum score for the game
    int winplay[20];
    int k=0;
    for (int i=0;i<10;i++){
        if (arr[i]==x){
            winplay[k]=i; //pusing the index of the toppers into the array (IF there are more than one toppers, then the array has more than one elements)
            k++;
        }

    }
    for (int i=0;i<(sizeof(winplay)/sizeof(winplay[0]));i++){
        printf("%d",arr[i]); //printing the game toppers
    }
    return 0;
}
int overallsum(int a1[], int b1[], int c1[]){ //inputting all the three game scores as array
    //finding overall sum of all the players
    int score[10];
    for (int i=0;i<10;i++){
        score[i]=a1[i]+b1[i]+c1[1]; //score contains total points in all three games for each player
    }
    int l=maximum(score); //contains the maximum score ever in the sum.
    gamestar(score); //finding the player who has the highest score.
    return 0;

}
int main(){
    int football[10]={10,0,7,4,6,9,5,9,0,10,8};
    int Gymnastics[10]={8,10,9,7,4,10,9,8,7,0};
    int Athletics[10]={8,10,5,10,8,4,7,8,9,9};
    gamestar(football);
    gamestar(Gymnastics);
    gamestar(Athletics);
    overall(football,Gymnastics,Athletics);
}